<h2 class="margin-bottom-30">JabBase</h2>

<%= bootstrap_form_for(resource, layout: :horizontal, as: resource_name, label_col: "col-sm-0", control_col: "col-sm-12", url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", hide_label: true %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe", hide_label: true %>
    <%= f.hidden_field :remember_me, value: true %>
    <%= f.form_group do %>
      <%= f.submit value: "Connexion", class: "btn btn-default col-sm-12" %>
    <% end %>
<% end -%>

